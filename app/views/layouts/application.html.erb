<!DOCTYPE html>
<html>
  <head>
    <title>ESportsbet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="margin: 0px; padding: 0px;">
    <div style="position: absolute; top: 0; margin: auto;" class="notice"><%= notice %></div>
    <div style="position: absolute; top: 0; margin: auto;"class="alert"><%= alert %></div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
      <a class="navbar-brand" href="/">Logo</a>
      <div class="collapse navbar-collapse d-flex flex-row-reverse">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%- if user_signed_in? %>
              <%= link_to "Log out", destroy_user_session_path, class: "nav-link" %>
            <% else -%>
              <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
            <% end -%>
          </li>
          <li class="nav-item" style="margin-left: 10px;">
            <%- unless user_signed_in? %>
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
            <% end -%>
          </li>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
